[core]
    editor = "micro"
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[branch "trunk"]
    allowCommit = false
[alias]
    st = status -s
    cl = clone
    df = diff
    dfi = !sh -c 'arc diff '"'"':!$1'"'"''
    dc = diff --cached
    dci = !sh -c 'arc diff --cached '"'"':!$1'"'"''
    dfa = diff HEAD
    unstage = reset HEAD --
    last = log --max-count 1 HEAD
    back = reset --soft HEAD^
    cleanup = clean -xd
    lg = log --oneline --graph
    lgc = log --oneline .
    lgn = "!arc log --oneline --graph --max-count $1"
    cob = !sh -c 'arc co -b users/$USER/$0'
    pushu = !arc push -u $(arc branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
    prp = pr create --push
